@model IEnumerable<TaskRunwayApplication.Models.Task>
@{
    ViewBag.Title = "Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Statistics</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Time Spent</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@(TimeSpan.FromSeconds(task.Spent).ToString(@"hh\:mm\:ss"))</td>
            </tr>
        }
    </tbody>
</table>
